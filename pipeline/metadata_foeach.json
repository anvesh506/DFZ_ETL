								{
									"referenceName": "bakery_tgt_csv_conn",
									"type": "DatasetReference",
									"parameters": {
										"tgt_file_name": {
											"value": "activity('Get Metadata1').output",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
